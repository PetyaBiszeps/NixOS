# Default host variables
# Vocabulary for important constants
# Feel free to add, remove and edit anything here as you wish

{
  # System
  timeZone = "Europe/Kyiv";
  keyboardLayout = "us";
  monitorSettings = "monitor=,preferred,auto,1";

  # Git
  gitUsername = "user";
  gitEmail = "user@example.com";

  # Software
  browser = "zen";
  terminal = "ghostty";

  # Enable NFS
  enableNFS = true;

  # Enable printing support
  printEnable = true;

  # Enable Nautilus GUI file manager
  nautilusEnable = true;

  # Enable gaming support (controllers, gamescope, protonup-qt)
  gamingSupportEnable = true;

  # Shell choice
  defaultShell = "zsh";

  # Quickshell Choice
  desktopShell = "noctalia";
}