# Host-specific variables config
# Pack of specific flags, that controls user experience
# Feel free to change, modify, create new and make whatever you want

{
  # Git
  gitUsername = "user";
  gitEmail = "user@example.com";

  # System Configuration
  timeZone = "Europe/Kyiv";

  # Program Options
  browser = "zen";
  terminal = "ghostty";
  keyboardLayout = "us";

  # Enable NFS
  enableNFS = true;

  # Enable Printing Support
  printEnable = true;

  # Enable Nautilus GUI File Manager
  nautilusEnable = true;

  # Enable Gaming Support (controllers, gamescope, protonup-qt)
  gamingSupportEnable = true;

  # Enable Extra Browsers (Google Chrome, Firefox, Brave)
  enableExtraBrowsers = true;

  # Startup Applications
  startupApps = [];
}